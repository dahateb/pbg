{
	"manifest_version": 2,
	"name": "paywallbegone",
	"description": "unpaywall tool",
	"version": "0.0.2",
	"icons": {
		"64": "icons/icon.png"
	},
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"storage",
		"<all_urls>"
	],
	"background": {
		"scripts": [
			"background_script.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.mozilla.org/*"
			],
			"js": [
				"content_script.js"
			]
		}
	],
	"browser_action": {
		"default_icon": {
			"64": "icons/icon.png"
		},
		"default_popup": "browserAction/index.html",
		"default_title": "paywallbegone"
	},
	"page_action": {
		"default_icon": {
			"64": "icons/icon.png"
		},
		"default_popup": "pageAction/index.html",
		"default_title": "paywallbegone"
	},
	"options_ui": {
		"page": "options/index.html"
	},
	"browser_specific_settings": {
		"gecko": {
		  "id": "dahateb@github.com"
		}
	}
}